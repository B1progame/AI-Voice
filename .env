# App
APP_HOST=127.0.0.1
APP_PORT=8000

# Security
# IMPORTANT: change JWT_SECRET to a long random string
JWT_SECRET=CHANGE_ME_TO_A_LONG_RANDOM_SECRET
JWT_EXPIRES_MINUTES=10080

# Cookies (behind Caddy HTTPS => secure cookies recommended)
COOKIE_SECURE=true
COOKIE_SAMESITE=lax
COOKIE_DOMAIN=

# Admin bootstrap (created on first start if not exists)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=B1pro
ADMIN_FORCE_RESET=false

# Ollama (WSL2; accessible from Windows via localhost)
OLLAMA_URL=http://localhost:11435
OLLAMA_MODEL=llama3.1:8b

# Optional: limit context size
LLM_MAX_CONTEXT_MESSAGES=10

# Stage 1.5 Tools
# Optional: Web Search (SearXNG). If not set, web_search/recipe_search will return a clear error (no fallback).
SEARXNG_URL=http://localhost:8081

# Tool timeouts (seconds)
WEATHER_TIMEOUT_SECONDS=12
SEARCH_TIMEOUT_SECONDS=12